<center>
<h1><%= @cohort.title %></h1><h5>Instructor: <%= @cohort.teacher.name %></h5>
<br>

<% if @user == @cohort.teacher %>

  <div class="btn btn-primary" style="padding: 0px">
    <%= link_to "Add an Asignment", new_cohort_assignment_path(@cohort), :class => "btn" %>
  </div>

  <div class="btn btn-primary" style="padding: 0px">
    <%= link_to "Edit this Cohort", edit_cohort_path(@cohort), :class => "btn" %>
  </div>

  <div class="btn btn-primary" style="padding: 0px">
    <%= button_to "Delete this Cohort", cohort_path(@cohort), method: :delete, :class => "btn" %>
  </div>

  <br>
  <br>

  <h4> Students: </h4>

  <% @cohort.students.each do |s| %>
  <%= s.name %>
  <div class="btn btn-primary" style="padding: 0px">
    <%= button_to "Remove this Student", cohort_user_cohort_path(@cohort,@uc), method: :delete, :class => "btn" %>
  </div>
  <br>
  <br>
  <%end%>
<%end%>

<br>
<br>
<br>

<h5>Available Assignments:</h5>
<br>
<br>
<% @cohort.assignments.each do |a| %>
  <div class="btn btn-primary" style="padding: 0px">
    <%= link_to a.title, cohort_assignment_path(@cohort,a), :class => "btn" %>
  </div>
<%end%>
<br>
<% if @user.current_role == "Student" && !@cohort.students.include?(current_user) %>
  <div class="btn btn-primary" style="padding: 0px">
    <%= link_to "Join this class", new_cohort_user_cohort_path(@cohort), :class => "btn" %>
  </div>
<%end%>
</center>
