<center><h1>Log In</h1>
<%= form_for @user, :url => sessions_path do |f| %>
    <%= f.label :email %><br>
    <%= f.email_field :email %><br><br>
    <%= f.label :password %><br>
    <%= f.password_field :password%><br><br>
    <%= f.label :current_role %><br>
    <%= f.collection_select :current_role, Role.all,:name,:name%><br><br>
    <%= f.submit "Log In"%>
<%end%></center>
